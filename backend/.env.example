# MongoDB Atlas connection string (replace <username>, <password>, <cluster> etc.)
MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/proflow?retryWrites=true&w=majority

# JWT secret for signing tokens (use long, random value in production)
JWT_SECRET=change_this_to_a_long_random_string

# JWT token expiration (e.g. 7d, 1h)
JWT_EXPIRES_IN=7d

# Server port (default 4000)
PORT=4000

# Nodemailer (dev) - leave blank for provider-agnostic dev usage or use SMTP test account
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=example@example.com
EMAIL_PASS=supersecret

# App base URL (used when building links in emails/pdf)
APP_URL=http://localhost:4000

# Workspace defaults
DEFAULT_CURRENCY=USD
DEFAULT_TIMEZONE=UTC